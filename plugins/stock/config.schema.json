{
    "schema": {
        "stock": {
            "type": "object",
            "title": "Stock Settings",
            "properties": {
                "key": {
                    "type": "string",
                    "title": "Alpha Vantage API Key"
                },
                "names": {
                    "type": "array",
                    "title": "Stock Symbols",
                    "items": {
                        "type": "string"
                    }
                },
                "refreshInterval": {
                  "type": "integer",
                  "title": "Refresh Interval (minutes)",
                  "default": 5
              }
            }
        }
    },
    "form": [
        {
            "type": "fieldset",
            "title": "Stock Settings",
            "expandable": true,
            "order":0,
            "items":[
              "stock.key",
              {
                "type":"tabarray",
                "title":"Stock Symbols",
                "items":[
                    {
                      "type":"section",
                      "legend":"{{value}}",
                      "items": [
                        {
                          "key":"stock.names[]",
                          "notitle":true,
                          "valueInLegend":true
                        }
                      ]
                    }  
                ]
              }
          ]
        }
    ]
}